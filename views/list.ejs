<!DOCTYPE html>
<html>
    <head>
        <title>Todo list</title>
        <link rel="stylesheet" href="css/styles.css">
    </head>
    <body>
        <div class="box">
            <h1>Todo list</h1>
        </div>
        <div class="box">
           <% ejes.forEach(function(items){ %>
            <form action="/delete" method="post"><div class="item">
                <input type="checkbox"onclick="completeTask(this)" value="<%= items._id %>" name="checkbox1" onchange="this.form.submit()">
                <P><%= items.name %></P>
            </div>
            </form>
             <% })%>
           
            <form action="/" method="post">
                <input type="text" name="ele1" placeholder="Enter the task">
                <button type="submt">+</button>
            </form>
        </div>
    </body>
    <script>
        function completeTask(checkbox) {
            var task = checkbox.nextElementSibling;
            if (checkbox.checked) {
                task.classList.add('completed');
            } else {
                task.classList.remove('completed');
            }
        }
        </script>
    
        
</html>